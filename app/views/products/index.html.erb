<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
      <%= link_to "Preview",  rails_blob_path(product.photo) %>
    </p>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
